generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String         @id
  name                 String
  email                String
  emailVerified        Boolean
  image                String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  sessions             Session[]
  password String?

  presentationsCreated Presentation[] @relation("CreatorRelation")
  presentationsJoined  Presentation[] @relation("MemberRelation")

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}


model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

// canvasly logic
model Presentation {
  id          String  @id
  title       String
  description String?

  creator User   @relation("CreatorRelation", fields: [userId], references: [id])
  userId  String

  members User[] @relation("MemberRelation")
}
